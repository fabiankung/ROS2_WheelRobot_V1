<!--    Launch file in XML
        Author:         Fabian Kung
        Last modified:  24 Jan 2024 -->

<launch>
    <let name="urdf_path" 
        value="$(find-pkg-share wheelrobotnav2_description)/urdf/wheelrobot1.urdf" />

    <!-- Rviz configuration file for robot prototype with laser scanner -->
    <!-- Change the configuration file to robot_rangesensor_config.rviz if no laser scanner -->
    <let name="rviz_config_path"
        value="$(find-pkg-share wheelrobotnav2_description)/rviz/robot_odom_rangesensor_laserscan_config.rviz" />

    <!-- Launch robot state publisher node -->
    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description"
            value="$(command 'xacro $(var urdf_path)')" />
    </node>

    
    <!-- Launch joint state publisher GUI node -->
    <!-- We can comment out the joint state publisher GUI node if our package 
         has own joint state publisher -->
    <!--<node pkg="joint_state_publisher_gui" exec="joint_state_publisher_gui" />-->

    <!-- Launch rviz2 node with argument being the configuration file -->
    <node pkg="rviz2" exec="rviz2" output="screen" 
          args="-d $(var rviz_config_path)" />
</launch>